<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#f3e5f5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="first image"
        android:scaleType="centerCrop"
        android:textSize="32sp"
        app:srcCompat="@drawable/infographix" />

    <TextView
        android:id="@+id/textView"
        android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Telephonix Limited."
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textSize="32sp" />

    <TextView
        android:layout_below="@id/textView"
        android:id="@+id/textView4"
        android:textSize="21sp"
        android:padding="2dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="match_parent"
        android:background="#e91e63"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="Data display and content ...YAY!!" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="237dp"
            android:background="#e1bee7"
            android:layout_height="147dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/map_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ba68c8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Corner Happiness and Truth Ave"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="08:00am - 17:00pm (weekdays)"
                android:background="#ea80fc"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLay"
        android:padding="5dp"
        android:layout_below="@id/linearLayout"
        android:orientation="horizontal">

        <ImageView
            android:padding="3dp"
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/download" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/th" />

        <ImageView
            android:padding="3dp"
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/d8447dab23fec2b42bc0791d23dd2f89" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_below="@id/linearLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10sp"
        android:textColor="#567676"
        android:text="Telephonix is a company that deals with telephonic instalations and 3rd partty services related to telephonic installations." />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/textView6"
        android:background="?android:attr/listDivider"
        android:contentDescription="first Image"
        android:paddingLeft="10dp"

        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_below="@id/divider"
        android:layout_width="match_parent"
        android:textSize="19sp"
        android:textAlignment="center"
        android:background="#f50057"
        android:layout_margin="12dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Contact Number
        : 022-222-2289" />


</RelativeLayout>